generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  id            Int       @id @default(autoincrement())
  name          String
  position      Position
  nationality   String?
  age           Int
  overall       Int        @db.TinyInt     // 能力値 (0-100 想定)
  potential     Int        @db.TinyInt     // 伸びしろ (0-100 想定)
  currentClub   String?
  contractUntil DateTime?
  marketValue   Int?       // 移籍市場価値
  wage          Int?       // 年俸 / 週給
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([name])
  @@index([position])
  @@index([overall])
}

enum Position {
  GK
  RB
  RWB
  CB
  LB
  LWB
  DM
  CM
  AM
  RW
  LW
  ST
  CF
}

model Team {
  id         Int      @id @default(autoincrement())
  name       String
  country    String?
  foundedYear Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([name])
}


